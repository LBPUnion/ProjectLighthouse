@model (string Url, string Title)

<iframe src="@Model.Url"
        title="@Model.Title"
        style="width: 100%; height: 100%; border: 0; overflow: hidden"
        scrolling="no"
        seamless="seamless"
        onload="this.style.height=(this.contentWindow.document.querySelector('div').scrollHeight + 'px')">
</iframe>